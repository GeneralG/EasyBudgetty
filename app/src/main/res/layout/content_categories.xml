<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="za.co.easybudgetty.categories"
    tools:showIn="@layout/activity_categories">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categories"
        android:id="@+id/categoryTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Category Name"
        android:id="@+id/textView8"
        android:layout_below="@+id/categoryTitle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAdd"
        android:layout_below="@+id/textView8"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Category"
        android:onClick="za.co.categories.onClick_btnAdd"
        android:id="@+id/btnAdd"
        android:layout_below="@+id/txtAdd" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/spnCategories"
        android:layout_below="@+id/btnAdd"
        android:layout_width="fill_parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUpdate"
        android:layout_below="@+id/spnCategories"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Category"
        android:id="@+id/btnUpdate"
        android:layout_below="@+id/txtUpdate"/>


</RelativeLayout>
